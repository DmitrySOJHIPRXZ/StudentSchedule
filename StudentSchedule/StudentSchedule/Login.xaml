<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentSchedule.Login" IsBusy="False">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="loginEntry" Placeholder="Логин"/>
            <Entry x:Name="passwordEntry" Placeholder="Пароль" />
            <Button x:Name="btn_login" Text="Войти" Clicked="btn_login_Clicked"/>
            <WebView x:Name="webView" Source="https://dot.tou.edu.kz/auth/login" VerticalOptions="FillAndExpand"  Navigated="webView_Navigated" IsVisible="false"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>