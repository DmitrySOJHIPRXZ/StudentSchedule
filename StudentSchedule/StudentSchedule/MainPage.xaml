<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentSchedule.MainPage">

    <StackLayout>
        <WebView x:Name="webView" Source="https://dot.tou.edu.kz/students-schedule" VerticalOptions="FillAndExpand" IsVisible="false" Navigated="webView_Navigated"/>
        <ListView x:Name="phonesList"
              HasUnevenRows="True"
              ItemsSource="{Binding Lessons}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding lesson}" FontSize="18" HorizontalTextAlignment="Center"/>
                                <Label Text="{Binding data_time}" HorizontalTextAlignment="Center"/>
                                <Label Text="{Binding teacher}" HorizontalTextAlignment="Center"/>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
